{
  "manifest_version": 3,
  "name": "Daring Fireball Filter",
  "version": "1.1",
  "description": "Hide posts on Daring Fireball containing unwanted keywords.",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://daringfireball.net/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}